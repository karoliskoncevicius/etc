source $XDG_CONFIG_HOME/mutt/muttrc
source $XDG_CONFIG_HOME/mutt/pass

# me
set realname = "Karolis KonceviÄius"
set from = $my_gmail_user
set envelope_from = yes

# personal account info
set imap_user = $my_gmail_user
set imap_pass = $my_gmail_pass
set folder = imaps://imap.gmail.com/
set smtp_url = smtps://"$my_gmail_user"@smtp.gmail.com:465/
set smtp_pass = $imap_pass
set smtp_authenticators = 'gssapi:login'

# default mailboxes
set spoolfile = "=INBOX"
set record = "=[Gmail]/Sent Mail"
set postponed = "=[Gmail]/Drafts"
set trash = "=[Gmail]/Trash"

# mailboxes
set imap_check_subscribed

# refresh the mailbox to make sure everything is updated
exec refresh
